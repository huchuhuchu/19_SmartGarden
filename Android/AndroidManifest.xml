<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="kr.co.dothome.sssoyoung.ex1">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <!--메인 액티비티(앱 실행 시 시작 액티비티)-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--서브 액티비티 추가-->
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".JoinActivity"></activity>
        <activity android:name=".MenuActivity"></activity>
        <activity android:name=".FindActivity"></activity>
        <activity android:name=".PotManageActivity"></activity>
        <activity android:name=".PotRegisterActivity"></activity>
        <activity android:name=".PotDelActivity"></activity>
        <activity android:name=".LoginRequest"></activity>
    </application>

</manifest>